<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 指定操作类型(指定文件归属的操作类) -->
<mapper namespace="com.itheima.mybatis.day02.a.UserMapper">

    <!-- 指定操作名称; 指定封装类; 执行语句 -->
    <select id="findById" resultType="com.itheima.mybatis.day02.a.User">
        select * from user where id = #{id}
    </select>

</mapper>