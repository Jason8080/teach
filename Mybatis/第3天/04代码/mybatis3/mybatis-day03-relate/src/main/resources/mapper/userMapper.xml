<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 指定操作类型(指定文件归属的操作类) -->
<mapper namespace="com.itheima.mybatis.day03.relate.mapper.UserMapper">

    <resultMap id="O2M" type="user">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="birthday" column="birthday"/>
        <result property="birthday" column="birthday"/>
        <result property="sex" column="sex"/>
        <result property="address" column="address"/>
        <collection property="orders" ofType="order">
            <id property="id" column="oid"/>
            <result property="userId" column="user_id"/>
            <result property="number" column="number"/>
            <result property="createTime" column="createTime"/>
            <result property="note" column="note"/>
        </collection>
    </resultMap>

    <resultMap id="M2M" type="user">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="birthday" column="birthday"/>
        <result property="birthday" column="birthday"/>
        <result property="sex" column="sex"/>
        <result property="address" column="address"/>
        <collection property="roles" javaType="list" ofType="role">
            <!-- 名称不能与外部的名称相同 -->
            <id property="roleId" column="role_di"/>
            <result property="roleName" column="role_name"/>
            <result property="roleDetail" column="role_detail"/>
        </collection>
    </resultMap>




    <select id="findO2M" resultMap="O2M">
        SELECT
        u.id,
        u.username,
        u.birthday,
        u.sex,
        u.address,
        o.id oid,
        o.number,
        o.createtime
        FROM user u
        LEFT JOIN orders o ON o.user_id = u.id
    </select>

    <select id="findM2M" resultMap="M2M">
        SELECT
            *
        FROM
            user_role ur
        LEFT JOIN USER u ON u.id = ur.user_id
        LEFT JOIN role r ON ur.role_id = r.role_id
    </select>
</mapper>