<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.mybatis.day02.dao.UserMapper">

    <select id="findById" resultType="com.itheima.mybatis.day02.dao.User">
        select * from user where id=#{id}
    </select>


    <insert id="saveUser" parameterType="com.itheima.mybatis.day02.dao.User"
            useGeneratedKeys="true" keyProperty="id">

        <selectKey resultType="int" keyColumn="id" keyProperty="id">
            select LAST_INSERT_ID()
        </selectKey>

        insert into user(username, birthday, sex, address)
        values(#{username}, #{birthday}, #{sex}, #{address})
    </insert>
</mapper>
